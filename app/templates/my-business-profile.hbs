{{outlet}}




<div class="business-profile-info-wrap">
  <div class="business-profile-container">
    <div class="business-profile-background"></div>

    <div class="business-profile-info">
      <ul>
        <li class="business-profile-name"><div class="profile-span-name business-profile-span-name">{{session.currentUser.businessName}} {{fa-icon "check-circle"}} </div></li>
        <li class="business-profile-username"><div class="profile-span-name profile-span-username">@{{session.currentUser.handle}}</div></li>
        <li class="business-profile-address1"><div class="profile-span-name profile-span-address"><a href="/">{{session.currentUser.address}}</a> • {{session.currentUser.city}}, {{session.currentUser.state}} {{session.currentUser.zip}}</div></li>
        <li class="business-profile-hours"><div class="profile-span-name">{{session.currentUser.businessHours}}</div></li>
        <li class="business-profile-website"><div class="profile-span-name"><a href="/">{{session.currentUser.website}}</a></div></li>
      </ul>
        <div class="business-profile-info-edit">
          {{#link-to 'business-edit'}}
            {{fa-icon "magic"}} Edit Info
          {{/link-to}}
        </div>
      <div class="business-profile-background-edit"><a href="/">{{fa-icon "file-image-o"}} Upload Cover Image</a></div>
    </div>
  </div>
</div>

<div class="business-profile-feed-wrap">
  <div class="business-profile-feed">

    <div class="business-profile-status">
      <form {{action 'postStatus' on="submit"}}>

        {{textarea id="business-status" value=status autoresize=true maxHeight=200 placeholder="What's going on?"}}

        <div class="submit-status">
          <button type="submit" class="post-status">Post</button>
        </div>

      </form>

    </div>

    <div class="feed-container">
      <div class="feed-post">
          <ul>
            {{#each model}}
              <div class="feed-avatar-container">
                <li class="feed-avatar"></li>
              </div>
              <div class="feed-info-container">
                <li class="feed-name">{{model.creator.businessName}} {{fa-icon "check-circle"}} <span class="feed-time">5 minutes ago</span></li>
                <!-- <li class="feed-dynamic"><span class="feed-radius">2 miles away</span></li> -->
                <li class="feed-status">{{model.status}}</li>
                <li class="feed-social-buttons"><span class="feed-likes">{{fa-icon "beer"}} 24 people like this</span><span class="feed-addfavorite">{{fa-icon "plus"}} Add to Favorites</span></li>
              </div>
            {{/each}}
          </ul>
      </div>
    </div>

    <div class="footer-container">

      <div class="footer-copyright">
        <p>Keith® 2015 All Rights Reserved</p>
      </div>

      <div class="footer-social-icons">
        <a href="/">{{fa-icon "facebook"}}</a>
        <a href="/">{{fa-icon "twitter"}}</a>
        <a href="/">{{fa-icon "instagram"}}</a>
      </div>

    </div>

  </div>
</div>
