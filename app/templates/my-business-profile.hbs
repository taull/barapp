  <div class="login-wrap">

    <div class="business-profile-status">
      <form {{action 'postStatus' on="submit"}}>

        {{textarea id="business-status" value=status autoresize=true maxHeight=200 required=true placeholder="What's going on?"}}
        <div class="post-loader-container hidden">
          <div class="post-loader" title="0">
            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                 width="24px" height="30px" viewBox="0 0 24 30" style="enable-background:new 0 0 50 50;" xml:space="preserve">
                <rect x="0" y="10" width="4" height="10" fill="#333" opacity="0.9">
                  <animate attributeName="opacity" attributeType="XML" values="0.2; 1; .2" begin="0s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="height" attributeType="XML" values="10; 20; 10" begin="0s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="y" attributeType="XML" values="10; 5; 10" begin="0s" dur="1s" repeatCount="indefinite" />
                </rect>
                <rect x="8" y="10" width="4" height="10" fill="#333"  opacity="0.9">
                  <animate attributeName="opacity" attributeType="XML" values="0.2; 1; .2" begin="0.15s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="height" attributeType="XML" values="10; 20; 10" begin="0.15s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="y" attributeType="XML" values="10; 5; 10" begin="0.15s" dur="1s" repeatCount="indefinite" />
                </rect>
                <rect x="16" y="10" width="4" height="10" fill="#333"  opacity="0.9">
                  <animate attributeName="opacity" attributeType="XML" values="0.2; 1; .2" begin="0.3s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="height" attributeType="XML" values="10; 20; 10" begin="0.3s" dur="1s" repeatCount="indefinite" />
                  <animate attributeName="y" attributeType="XML" values="10; 5; 10" begin="0.3s" dur="1s" repeatCount="indefinite" />
                </rect>
              </svg>
          </div>
        </div>

        <div class="submit-status">
          <button {{action 'editDestroy'}} class="edit-destroy">Edit Feed</button>
          <button {{action 'cancelDestroy'}} class="cancel-destroy hidden">Cancel</button>
          <button type="submit" class="post-status">Post</button>
          <div class="camera-icon">{{fa-icon "camera"}}</div>
          <button {{action 'editDestroy'}} class="edit-destroy"><li class="edit-feed"><div class="editfeed-icon">{{fa-icon "chevron-left"}}</div><p>Edit Feed</p></li></button>
          <button {{action 'cancelDestroy'}} class="cancel-destroy hidden"><li class="cancel-edit hidden"><div class="editfeed-icon">{{fa-icon "chevron-left"}}</div><p>Cancel</p></li></button>

        </div>
      </form>
    </div>

  <div class="business-profile-feed">
    <div class="feed-container">

      <div class="business-config">
      </div>

      <div class="feed-post">
          <ul>
            {{#each post in sortedPosts}}

            <li class="single-post">
              <div class="feed-avatar hidden">
                  <button class="destroy-button" {{action 'minus-circle'}}><span class="destroy">{{fa-icon "times"}}</span></button>
              </div>

              <div class="feed-info-container">
                <li class="feed-name">{{post.business.businessName}} <span class="feed-time">{{ago post.createdAt}}</span></li>

                <li class="feed-address">{{post.business.address}}</li>
                <!-- <li class="feed-dynamic"><span class="feed-radius">2 miles away</span></li> -->
                <li class="feed-status">{{post.status}}</li>
                <!-- <li class="feed-social-buttons"><span class="feed-addfavorite">{{fa-icon "plus"}} Add to Favorites</span></li> -->
              </div>
              <!-- <div class="interaction-container">
                <li class="interaction-like">Like</li>
                <li class="interaction-follow">Follow</li>
                <li class="interaction-hide">Hide</li>
              </div> -->
            </li>

            {{/each}}
          </ul>
      </div>
    </div>
