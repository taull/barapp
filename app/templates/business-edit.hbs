{{outlet}}



<div class="body-container">
  <div class="my-sidebar-left">

    <div class="search">
      {{input type=search placeholder="Search..." value=search required=true}}
    </div>

    <div class="index-header">
      <div class="bartender-info">
        <p class="bartender-info-name">{{session.currentUser.businessName}}</p>
        <p class="bartender-info-location">{{session.currentUser.address}}</p>
        <p class="bartender-info-location">{{session.currentUser.city}}, {{session.currentUser.state}} {{session.currentUser.zip}}</p>
      </div>
    </div>

    <div class="business-numbers">
      <ul>
        <li><div class="numbers">340</div><div class="numbers-label"><p>Followers</p></div></li>
        <li><div class="numbers">126</div><div class="numbers-label"><p>Posts</p></div></li>
        <li><div class="numbers">4</div><div class="numbers-label"><p>Bartenders</p></div></li>
      </ul>
    </div>

    <div class="sidebar-photos">
      <ul>
        <li><div class="photo-container"><img src="/assets/images/henrysbar.jpg" class="photo-thumbnail"></div></li>
        <li><div class="photo-container"><img src="/assets/images/nightlife.jpg" class="photo-thumbnail"></div></li>
        <li><div class="photo-container"><img src="/assets/images/barscene.jpg" class="photo-thumbnail"></div></li>

      </ul>
    </div>

    <div class="business-tools">
      <ul>
        <li><div class="tools-icon">{{fa-icon "pencil-square-o"}}</div><div class="tools-label"><p>Edit Profile</p></div></li>
        <li><div class="tools-icon">{{fa-icon "glass"}}</div><div class="tools-label"><p>Edit Specials</p></div></li>
        <li><div class="tools-icon">{{fa-icon "star-o"}}</div><div class="tools-label"><p>Edit Profile</p></div></li>
      </ul>
    </div>

    <div class="business-tools2">
      <ul>
        <li><div class="tools-icon">{{fa-icon "check-circle"}}</div><div class="tools-label"><p>Edit Profile</p></div></li>
        <li><div class="tools-icon">{{fa-icon "check-circle"}}</div><div class="tools-label"><p>Edit Specials</p></div></li>
        <li><div class="tools-icon">{{fa-icon "check-circle"}}</div><div class="tools-label"><p>Edit Profile</p></div></li>
      </ul>
    </div>




    <div class="business-profile-info">
      <ul>
        <li class="business-profile-name"><div class="profile-span-name business-profile-span-name">{{session.currentUser.businessName}} {{fa-icon "check-circle"}} </div></li>
        <li class="business-profile-address1"><div class="profile-span-name profile-span-address"><a href="/">{{session.currentUser.address}}</a> • {{session.currentUser.city}}, {{session.currentUser.state}} {{session.currentUser.zip}}</div></li>
        <li class="business-profile-hours"><div class="profile-span-name">{{session.currentUser.businessHours}}</div></li>
        <li class="business-profile-website"><div class="profile-span-name"><a {{bind-attr href="session.currentUser.website"}}>{{session.currentUser.website}}</a></div></li>
      </ul>
        <div class="business-profile-info-edit">
          {{#link-to 'business-edit'}}
            {{fa-icon "magic"}} Edit Info
          {{/link-to}}
        </div>
      <div class="business-profile-background-edit">
        {{#link-to 'cover-upload'}}
          {{fa-icon "file-image-o"}} Upload Cover Image
        {{/link-to}}
      </div>
    </div>





  </div>
  <div class="business-profile-info-wrap">
  </div>
  <div class="login-wrap">


    <div class="business-edit-container">

      <form id="business-edit-form" {{action 'saveProfile' on='submit'}}>

        <div class="business-edit-name">
          {{input placeholder="Business Name" value=session.currentUser.businessName}}
        </div>

        <div class="business-edit-firstname">
          {{input placeholder="First Name" value=session.currentUser.firstName}}
        </div>
        <div class="business-edit-lastname">
          {{input placeholder="Last Name" value=session.currentUser.lastName}}
        </div>
        <div class="business-edit-address">
          {{input placeholder="Address" value=session.currentUser.address}}
        </div>
        <div class="business-edit-city">
          {{input placeholder="City" value=session.currentUser.city}}
        </div>
        <div class="business-edit-state">
          {{input placeholder="State" value=session.currentUser.state}}
        </div>
        <div class="business-edit-zip">
          {{input placeholder="Zip" value=session.currentUser.zip}}
        </div>
        <div class="business-edit-website">
          {{input placeholder="Website" value=session.currentUser.website}}
        </div>
        <div class="business-edit-hours">
          {{input placeholder="Business Hours" value=session.currentUser.businessHours}}
        </div>

        <div class="business-edit-submit">
          <button type="businessEditSubmit">Save</button>
        </div>
      </form>
      <div class="loader-container hidden">
        <div class="loader" title="0">
