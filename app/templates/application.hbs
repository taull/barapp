
<header>

  <div class="header-container">
    <!-- <p>{{session.currentUser.firstName}}</p> -->

    <div class="home-icon">{{#link-to 'index'}}{{fa-icon "home"}}{{/link-to}}</div>

    {{#if session.isAuthenticated}}
    
      <div class="info-open" {{action 'openInfo'}}>{{fa-icon "info-circle"}}</div>
      <div class="info-close hidden" {{action 'closeInfo'}}>{{fa-icon "info-circle"}}</div>

      <div class="calendar-open" {{action 'openCalendar'}}>{{fa-icon "calendar"}}</div>
      <div class="calendar-close hidden" {{action 'closeCalendar'}}>{{fa-icon "calendar"}}</div>

      <div class="sign-out" {{ action 'invalidateSession' }} href="javascript:void(0)">
        <p>Sign out</p>
      </div>

      {{#link-to 'my-business-profile'}}
      <div class="welcome">{{session.currentUser.firstName}}
      </div>
      {{/link-to}}


      {{else}}

      <div class="loggedin-link">
        {{#link-to 'login'}}Login{{/link-to}}
      </div>

    {{/if}}

<!--
    <div class="search">
      {{input type=search placeholder="Search..." value=search required=true}}
    </div> -->


  </div>

  <input type="checkbox" id="menu-bars" name="" value="">

  <!-- <div class="header-nav-wrap">

    <div class="header-nav">

    </div>
  </div> -->

</header>

{{outlet}}




<footer>
<div class="fixed-footer">

  <ul>
    {{#link-to 'index'}}<li class="footer-social"><div class="footer-social-icon">{{fa-icon "comments"}}</div><p>Activity</p></li>{{/link-to}}
    {{#link-to 'index'}}<li class="footer-social fs-favorites"><div class="footer-social-icon">{{fa-icon "star"}}</div><p>Favorites</p></li>{{/link-to}}
    {{#link-to 'my-business-profile'}}<li class="footer-social fs-profile"><div class="footer-social-icon">{{fa-icon "user"}}</div><p>My Profile</p></li>{{/link-to}}
    {{#link-to 'index'}}<li class="footer-social fs-settings"><div class="footer-social-icon">{{fa-icon "cog"}}</div><p>Settings</p></li>{{/link-to}}
  </ul>

</div>
</footer>
